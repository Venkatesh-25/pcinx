# FRA Atlas DSS - Environment Configuration
# Copy this file to .env and update with your actual values

# Flask Configuration
FLASK_ENV=development
SECRET_KEY=fra-atlas-secret-key-sih2025-change-in-production
JWT_SECRET_KEY=jwt-secret-string-change-in-production

# Database Configuration
DATABASE_URL=postgresql://fra_user:fra_password@localhost:5432/fra_atlas_db

# External API Keys
SENTINEL_API_USER=your_sentinel_hub_username
SENTINEL_API_PASSWORD=your_sentinel_hub_password
GOOGLE_EARTH_ENGINE_KEY=your_gee_service_account_key

# Redis Configuration (for caching and tasks)
REDIS_URL=redis://localhost:6379/0

# Email Configuration (for alerts)
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=true
MAIL_USERNAME=your_email@gmail.com
MAIL_PASSWORD=your_app_password
ALERT_EMAIL_RECIPIENTS=admin@fra-atlas.gov.in,alerts@forestdept.gov.in